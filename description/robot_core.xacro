<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
<xacro:include filename="inertial_macros.xacro" />

    <!--BASE-->
    <link name="base_link">
    </link>

    <!--CHASSIS-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="-0.192 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="chassis_link">
        <visual>
            <geometry>
                <box size="0.23 0.14 0.04"/>
            </geometry>
            <material name="red"/>
        <origin xyz="0.115 0.0 0.02" rpy="0.0 0.0 0.0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.23 0.14 0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.98" x="0.132" y="0.0" z="0.004">
            <origin xyz="0.115 0.0 0.02" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <!-- LEFT WHEEL -->
    
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0.0 0.090 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>    

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.043" length="0.037"/>
            </geometry>
            <material name="black">
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.043" length="0.037"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.058" length="0.037" radius="0.043">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>


        <!-- RIGHT WHEEL  -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0.0 -0.090 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>    

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.043" length="0.037"/>
            </geometry>
            <material name="black">
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.043" length="0.037"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.058" length="0.037" radius="0.043">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

        <!-- CASTER WHEEL -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0.028 0.0 -0.030"/>
    </joint>    

    <link name="caster_wheel_link">
        <visual>
            <geometry>
                    <sphere radius="0.012"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.012"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.022" radius="0.012">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="caster_wheel_link">
        <material>Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>



</robot>